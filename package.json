{
  "name": "ai-prompt-optimizer",
  "version": "1.0.0",
  "description": "AI提示词优化工具 - 全栈应用",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start:prod",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend": "jest --selectProjects backend",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "pnpm --filter backend lint",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "format:frontend": "pnpm --filter frontend format",
    "format:backend": "pnpm --filter backend format",
    "install:all": "pnpm install && pnpm --filter frontend install && pnpm --filter backend install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}